@using Vaultopia.Web.Helpers
@model Vaultopia.Web.Models.Formats.GalleryImage

<li data-image-id="@Model.Id" data-image-width="@Model.Original.Width" data-image-height="@Model.Original.Height">

    <a title="" href="@Model.Thumbnail.Url" class="image">
        <span class="enlarge sprite"></span>
        <picture>
            <source media="(max-width: 400px)" srcset="@Model.ThumbnailSmall.Url" />

            <img src="@Model.Thumbnail.Url" alt="" />
        </picture>
    </a>
    <a href="#" class="metadata-anchor icon">View image metadata</a>
</li>
